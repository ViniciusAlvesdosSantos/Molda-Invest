// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  cpf       String?  @unique
  phone     String? @unique
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  currency     String    @default("BRL")

  accounts     Account[]
  categories Category[]
  transactions Transaction[]
  investments  Investment[]

  @@map("users")
  @@index([email])
  @@index([cpf])
}
